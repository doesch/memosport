
@{
    ViewData["Title"] = "Login";
}


<div id="login-page-container">

    <h1>memosport.de</h1>

    <div id="login-form-container">
        <form method="post" action="@Url.Action("Login", "User")">
            <input id="login-input-email" type="text" name="email" placeholder="E-Mail" /><br />
            <input id="login-input-password" type="password" name="password" placeholder="Passwort" /><br />
            <input type="submit" value="LOGIN" data-bind="click: function(){ $root.loginClick(); return true;}" />
        </form>

    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/js/lib/knockout.js")"></script>
<script src="@Url.Content("~/js/lib/require.js")" data-main="@Url.Content("~/js/UserViewModel")"></script>


